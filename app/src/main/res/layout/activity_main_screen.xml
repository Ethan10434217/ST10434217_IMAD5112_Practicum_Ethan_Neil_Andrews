<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountain2"
    android:orientation="vertical"
    tools:context=".MainScreen">


    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp" />

    <TextView
        android:id="@+id/txtDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Days of The Week"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtDaysOfWeek"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="text"
        android:text="Name"
        android:textColor="#FFFFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <TextView
        android:id="@+id/txtAvgTemps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Average Weekly Temperature"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtAvgTemps"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="text"
        android:text="Name"
        android:textColor="#FFFFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/edtDataReset"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="Enter Data Here"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#2196F3"
        android:fontFamily="casual"
        android:text="Reset Data"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="59dp" />

    <Button
        android:id="@+id/btnLastScreen"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#2196F3"
        android:fontFamily="casual"
        android:text="View Enhanced Details"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="52dp" />

    <Button
        android:id="@+id/btnSecondExit"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#2196F3"
        android:fontFamily="casual"
        android:text="Exit Application"
        android:textSize="20sp" />
</LinearLayout>